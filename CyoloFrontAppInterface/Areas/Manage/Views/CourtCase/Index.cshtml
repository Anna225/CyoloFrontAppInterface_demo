                response.forEach(item => {
                    var val = formatSelectionJuridiction(item);
                    html += "<option value='" + val + "'>" + val + "</option>"
                });
                $("#jurisdiction").html(html);
            },
            error: function (err) {
                var html = "<option value=''>No Result</option>";
                $("#jurisdiction").html(html);
            }
        });
    }
</script>
